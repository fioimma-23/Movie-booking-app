<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Booking">

    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Movie Book App"
        android:textSize="50dp"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/head"
        android:text="Select a movie to book tickets"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="25dp"/>
    <View
        android:id="@+id/lin"
        android:layout_below="@id/name"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="@color/cardview_light_background"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/image1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/lin"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_launcher_background"
        tools:srcCompat="@drawable/movie_posters_movies_8405245_1224_1773" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="0dp"
        android:text="MOVIE 1"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="-1dp"
        android:text="BOOK" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/btn1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_launcher_background"
        tools:srcCompat="@drawable/avatar_movie_poster_final_01" />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="0dp"
        android:text="MOVIE 2"
        android:textColor="@color/white"
        android:textSize="20dp" />
    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="56dp"
        android:layout_below="@id/text2"
        android:text="BOOK"/>

    <ImageView
        android:id="@+id/image3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/lin"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_launcher_background"
        tools:srcCompat="@drawable/captain_marvel_movie_poster2" />
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="56dp"
        android:layout_marginTop="0dp"
        android:text="MOVIE 3"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="56dp"
        android:text="BOOK" />

    <ImageView
        android:id="@+id/image4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/btn3"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_launcher_background"
        tools:srcCompat="@drawable/sub_buzz_424_1582313095_1" />
    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image4"
        android:layout_alignParentRight="true"
        android:layout_marginRight="56dp"
        android:layout_marginTop="0dp"
        android:text="MOVIE 4"
        android:textColor="@color/white"
        android:textSize="20dp" />
    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="56dp"
        android:layout_below="@id/text4"
        android:text="BOOK"/>


</RelativeLayout>